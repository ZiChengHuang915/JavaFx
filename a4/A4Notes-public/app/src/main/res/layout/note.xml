<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/note_title"
            android:layout_width="120dp"
            android:layout_height="18dp" tools:layout_editor_absoluteY="3dp"
            tools:layout_editor_absoluteX="1dp"/>
    <TextView
            android:id="@+id/note_content"
            android:layout_width="241dp"
            android:layout_height="33dp" tools:layout_editor_absoluteY="21dp"
            tools:layout_editor_absoluteX="1dp" android:translationY="20dp" android:translationX="-120dp"/>
    <Button
            android:text="D"
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/button2" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="355dp" android:textSize="8sp" android:translationY="15dp"
            android:translationX="-80dp"/>
    <Button
            android:text="A"
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/button3" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="305dp" android:textSize="8sp" android:translationY="15dp"
            android:translationX="-60dp"/>
</LinearLayout>